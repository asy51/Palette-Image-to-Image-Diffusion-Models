{
    "name": "240216_translatebone",
    "gpu_ids": [1],
    "seed" : -1,
    "finetune_norm": false,

    "path": {
        "base_dir": "experiments",
        "code": "code",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        // "resume_state": "experiments/train_colorization_mooncomet_e4_quad_231001_085203/checkpoint/300"
        "resume_state": null
    },

    "datasets": {
        "train": { 
            "which_dataset": { 
                "name": ["data.dataset", "MoonCometDataset"],
                "args": {
                    "img_size": 256,
                    "task": "translatebone"
                }
            },
            "dataloader":{
                "validation_split": 0.10,
                "args":{
                    "batch_size": 3,
                    "num_workers": 16,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                },
                "val_args":{
                    "batch_size": 6,
                    "num_workers": 16,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                }
            }
        },
        "test": { 
            "which_dataset": {
                "name": "MoonCometTranslateBMELDataset"
            },
            "dataloader":{
                "args":{
                    "batch_size": 6,
                    "num_workers": 16,
                    "pin_memory": true
                }
            }
        }
    },

    "model": {
        "which_model": {
            "name": ["models.model", "Palette"],
            "args": {
                "sample_num": 8,
                "task": "colorization",
                "ema_scheduler": {
                    "ema_start": 1,
                    "ema_iter": 1,
                    "ema_decay": 0.9999
                },
                "optimizers": [
                    { "lr": 1e-4, "weight_decay": 0}
                ]
            }
        }, 
        "which_networks": [
            {
                "name": ["models.network", "Network"],
                "args": {
                    "init_type": "kaiming",
                    "module_name": "guided_diffusion",
                    "unet": {
                        "in_channel": 2,
                        "out_channel": 1,
                        "inner_channel": 64,
                        "channel_mults": [
                            1,
                            2,
                            4,
                            8
                        ],
                        "attn_res": [
                           
                            16
                           
                        ],
                        "num_head_channels": 32,
                        "res_blocks": 2,
                        "dropout": 0.2,
                        "image_size": 256
                    },
                    "beta_schedule": {
                        "train": {
                            "schedule": "quad",
                            "n_timestep": 1000,
                           
                            "linear_start": 1e-6,
                            "linear_end": 0.01
                        },
                        "test": {
                            "schedule": "quad",
                            "n_timestep": 1000,
                            "linear_start": 1e-4,
                            "linear_end": 0.09
                        }
                    }
                }
            }
        ],
        "which_losses": [
            "mse_loss"
        ],
        "which_metrics": [
            "mae"
        ]
    },

    "train": {
        "n_epoch": 1e8,
        "n_iter": 1e8,
        "val_epoch": 20,
        "save_checkpoint_epoch": 20,
        "log_iter": 1e4,
        "tensorboard" : true
    },
    
    "debug": {
        "val_epoch": 1,
        "save_checkpoint_epoch": 1,
        "log_iter": 10,
        "debug_split": 50
    }
}
